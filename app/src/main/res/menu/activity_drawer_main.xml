    <item
        android:id="@+id/nav_today"
        android:icon="@drawable/ic_menu_share"
        android:title="@string/nav_today" />

    <!-- further app possibilities:
         1. create PDF overview of all To-Dos and offer possibilities to share this PDF
         2. create PDF overview of all To-Dos and start e-mail intent to send this PDF -->
    <item android:title="@string/nav_communicate">
        <menu>
            <item
                android:id="@+id/nav_share"
                android:icon="@drawable/ic_menu_share"
                android:title="@string/nav_share" />
