<?xml version="1.0" encoding="utf-8"?>
<!-- XML menu file for navigation drawer body layout: creates the menu -->
<!-- belongs to MAIN Activity -->
<menu xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Todo: Change the icons -->

    <!-- sorting possibilities -->
    <group android:checkableBehavior="single">
        <item android:title="@string/nav_sort">
            <menu>
                <item
                    android:id="@+id/nav_date"
                    android:icon="@drawable/ic_menu_share"
                    android:title="@string/nav_date" />
                <item
                    android:id="@+id/nav_fav"
                    android:icon="@drawable/ic_menu_share"
                    android:title="@string/nav_fav" />
                <item
                    android:id="@+id/nav_done"
                    android:icon="@drawable/ic_menu_send"
                    android:title="@string/nav_done" />
                <item
                    android:id="@+id/nav_reset"
                    android:icon="@drawable/ic_menu_send"
                    android:title="@string/nav_reset" />
            </menu>
        </item>
